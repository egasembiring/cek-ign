# Server Configuration
PORT=6969
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database/cek_ign.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# cPanel Configuration (when deploying to cPanel)
# CPANEL_NODE_VERSION=18
# CPANEL_STARTUP_FILE=dist/index.js
# CPANEL_APP_ROOT=/home/username/public_html/api